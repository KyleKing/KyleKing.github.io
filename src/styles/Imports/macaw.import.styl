// Big Image for Hero Element
.header-image
  position: relative
  float: left
  z-index: 0
  // height: 500px
  height: 650px
  width: 100%
  background: url("../imgs/cover_capstone.jpg")
  background-repeat: no-repeat
  background-size: cover
  background-position: 50% 10%

.callout-box
  position: relative
  float: left
  clear: both
  z-index: 3
  width: 52.8010416666%
  margin: -120px 0 0 23.6%
  padding-top: 50px
  padding-bottom: 50px
  padding-right 20px
  padding-left 20px
  background-color: rgba(255, 255, 255, 0.95)

@media (max-width: 1200px)
  .callout-box
    position: relative
    z-index: 3
    margin-left: 23.59844%

  .header-image
    position: relative
    z-index: 0
    height: 427px

@media (max-width: 992px)
  .callout-box
    position: relative
    z-index: 3
    margin-left: 10%
    width: 80%

// Project Cards
img_cover_mixin(url, left_spacing, top_spacing)
  background-image url("../imgs/" + url)
  background-repeat no-repeat
  background-size cover
  background-position left_spacing top_spacing
  height 280px
  width auto

