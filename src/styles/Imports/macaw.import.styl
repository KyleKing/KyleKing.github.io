  position: relative
  float: left
  z-index: 0
  // height: 500px
  height: 650px
  width: 100%
  background: url("../imgs/cover_capstone.jpg")
  background-repeat: no-repeat
  background-size: cover
  background-position: 50% 10%
.header-image-spacing
  margin-top: 10px
  margin-bottom: 10px

@media (max-width: $desktop)
  .header-image
    position: relative
    z-index: 0
    height: 427px
    margin-bottom: 30px

// Project Cards
img_cover_mixin(url, left_spacing, top_spacing)
  background-image: url("../imgs/" + url)
  background-repeat: no-repeat
  background-size: cover
  background-position: left_spacing top_spacing
  height: 180px
  width: auto
  overflow: hidden

