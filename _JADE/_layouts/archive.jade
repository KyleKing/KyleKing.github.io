header.page-header
  h1 {{ page.title }}

{% for post in site.posts %}
ul
  li
    span.post-date {{ post.date | date: "%b %-d, %Y" }}
    a.post-link(href="{{ post.url | prepend: site.baseurl }}") {{ post.title }}
    <!-- Uses first paragraph of post or takes excerpt from YAML header -->
    {{ post.excerpt }}
{% endfor %}



article.post-content
{{ content }}