.card-container
  padding-top 0
  padding-bottom 40px
  margin 0
  cursor pointer
  // When in same row, add spacing around cards
  @media (min-width: $tablet)
    padding-right 5px
    padding-left 5px
  @media (max-width: $tablet)
    padding-right 50px
    padding-left 50px

.description-container
  height 180px
  padding-right 15px
  padding-left 15px
  @media (max-width: $tablet)
    height 210px
    padding-right 5px
    padding-left 5px

  // Begin centering based on guide: http://www.w3.org/Style/Examples/007/center.en.html#block
  position relative

// Vertically center content
.description-container .content
   position absolute
   top 50%
   left 50%
   margin-right -50%
   transform translate(-50%, -50%)

// Other Misc
.section-spacing
  height 50px
  width 100%
  margin none !important
.inverse
  color $light
.secondary-bg
  background-color $light